@model MackTechGroupProject.Models.gradeSubmittedAssignmentsViewModel

@{
    ViewBag.Title = "StudentsStatistics";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Student Statistics</title>

    <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>

    <script type="text/javascript">

    $(function () {
        var chart = new CanvasJS.Chart("chartContainer", {
            theme: "light2",
            zoomEnabled: true,
            animationEnabled: true,
            title: {
                text: "Student Statistics"
            },
            subtitles: [
                {
                    text: "High, Low, and Average Scores"
                }
            ],
            data: [
            {
                type: "bar",

                dataPoints: @Html.Raw(ViewBag.DataPoints),

                //You can add dynamic data from the controller as shown below. Check the controller and uncomment the line which generates dataPoints.
                //dataPoints: @Html.Raw(ViewBag.DataPoints),
            }
            ]
        });
        chart.render();
    });
    </script>
</head>

<body>
    <div class="box lightPurple profileHeader">@Model.SubmittedAssignments.FirstOrDefault().Assignment.AssignmentTitle</div>

    <hr />
    <div id="chartContainer"></div>

    <div class="row">
        <div class="col-sm-12" style="text-align: right"> <p>*scores based on graded assignments only</p></div>
    </div>

    <div class="row">
        <div class="col-sm-12" style="text-align: right"> <p>*if Low appears empty, Low Score is 0</p></div>
    </div>
    <footer class="col-md-12" style="margin-top: 500px;">
        <p>&nbsp;</p>
    </footer>
</body>
</html>
